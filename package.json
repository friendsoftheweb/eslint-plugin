{
  "name": "@friendsoftheweb/eslint-plugin",
  "repository": {
    "url": "git+https://github.com/friendsoftheweb/eslint-plugin.git"
  },
  "version": "0.0.3",
  "type": "module",
  "license": "MIT",
  "packageManager": "yarn@4.12.0",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "node --experimental-strip-types test/index.ts",
    "types:check": "tsc --noEmit",
    "lint": "eslint",
    "format:check": "prettier --check .",
    "build": "rm -rf dist && rollup --config rollup.config.mjs && tsc -p tsconfig.build.json",
    "publish": "npm publish --access public",
    "publish:next": "npm publish --access public --tag next"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^22.19.3",
    "@types/sinon": "^21.0.0",
    "@typescript-eslint/rule-tester": "^8.52.0",
    "@typescript-eslint/types": "^8.52.0",
    "@typescript-eslint/utils": "^8.52.0",
    "eslint": "^9.39.2",
    "eslint-plugin-eslint-plugin": "^7.3.0",
    "prettier": "^3.7.4",
    "rollup": "^4.55.1",
    "sinon": "^21.0.1",
    "tslib": "^2.8.1",
    "turbo": "^2.7.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "postcss": "^8.5.6",
    "postcss-selector-parser": "^7.1.1"
  },
  "peerDependencies": {
    "eslint": ">=9.0.0"
  }
}
